{
  "info": {
    "name": "Luciq Backend API",
    "_postman_id": "b31a4a4c-1d93-4e61-9a34-42b4e98b6d21",
    "description": "Postman collection to test Luciq Chat System API (Applications, Chats, Messages)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Applications",
      "item": [
        {
          "name": "Create Application",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Luciq App\"\n}"
            },
            "url": { "raw": "http://localhost:3000/applications", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["applications"] }
          }
        },
        {
          "name": "List Applications",
          "request": { "method": "GET", "url": "http://localhost:3000/applications" }
        },
        {
          "name": "Get Application by Token",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/applications/{{application_token}}"
          }
        },
        {
          "name": "Update Application",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Luciq App\"\n}"
            },
            "url": "http://localhost:3000/applications/{{application_token}}"
          }
        }
      ]
    },
    {
      "name": "Chats",
      "item": [
        {
          "name": "Create Chat",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "http://localhost:3000/applications/{{application_token}}/chats"
          }
        },
        {
          "name": "List Chats by Application",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/applications/{{application_token}}/chats"
          }
        },
        {
          "name": "Get Chat by Number",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/applications/{{application_token}}/chats/{{chat_number}}"
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Create Message",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"body\": \"Hello from Luciq!\"\n}"
            },
            "url": "http://localhost:3000/applications/{{application_token}}/chats/{{chat_number}}/messages"
          }
        },
        {
          "name": "List Messages",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/applications/{{application_token}}/chats/{{chat_number}}/messages"
          }
        },
        {
          "name": "Get Message by Number",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/applications/{{application_token}}/chats/{{chat_number}}/messages/{{message_number}}"
          }
        },
        {
          "name": "Search Messages (Elasticsearch)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/applications/{{application_token}}/chats/{{chat_number}}/messages/search?q={{query}}",
              "host": ["localhost"],
              "port": "3000",
              "path": [
                "applications",
                "{{application_token}}",
                "chats",
                "{{chat_number}}",
                "messages",
                "search"
              ],
              "query": [
                { "key": "q", "value": "{{query}}" }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "application_token", "value": "" },
    { "key": "chat_number", "value": "1" },
    { "key": "message_number", "value": "1" },
    { "key": "query", "value": "Hello" }
  ]
}
